{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/bootstrap/dist/css/bootstrap.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/font-awesome/css/font-awesome.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('local/css/fonts.css') }}"/>
    <link rel="stylesheet" href="{{ asset('local/css/main.css') }}"/>
{% endblock %}

{% block title 'Demo Bundle' %}

{% block body %}
    {% block content_header %}
        <header class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="div-brand">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="col-md-offset-1 col-md-10">
                            <a class="my-brand" href="{{ path("_welcome") }}">
                                DEVCOMPANY
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% block content_header_more %}
                <div class="container">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-left">
                                <li><a href="{{ path("_welcome") }}">About</a></li>
                                <li class="right-border"></li>
                                <li><a href="{{ path("_welcome") }}">Floor Plans</a></li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="{{ path("_welcome") }}">Location</a></li>
                                <li class="right-border"></li>
                                <li><a href="{{ path("_welcome") }}">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </header>
        <div style="clear: both"></div>
    {% endblock %}

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ flashMessage }}
        </div>
    {% endfor %}

    <div id="body">
        {% block content %}{% endblock %}
    </div>

    {% block footer %}
        <footer role="contentinfo" class="panel-footer">
            <div class="row">
                <div class="col-md-6 text-right right-border">
                    <div class="col-md-4 col-md-offset-6 col-sm-6">
                        <a class="link" href="">summitsothebysrealty.com</a>
                    </div>
                    <div class="col-md-2 col-sm-6">
                        <a class="link summit" href="">Summit</a>
                    </div>
                </div>
                <div class="col-md-6 text-left">
                    <div class="col-md-2">
                        <a href="">
                            <img class="img-responsive img-footer" src="{{ asset("local/images/sotheby.jpg") }}">
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="">
                            <img class="img-responsive img-footer2" src="{{ asset("local/images/footer.png") }}">
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    {% endblock %}
{% endblock %}

 {% block javascripts %}
     <script type="text/javascript" src="{{ asset("assets/jquery/dist/jquery.min.js") }}"></script>
     <script type="text/javascript" src="{{ asset("assets/bootstrap/dist/js/bootstrap.min.js") }}"></script>
     <script>
         $(window).resize(function () {
             $('#body').css('min-height', ($(window).height() - 129) + 'px');
         });
         $(window).load(function () {
             $('#body').css('min-height', ($(window).height() - 129) + 'px');
         })
     </script>
 {% endblock %}
